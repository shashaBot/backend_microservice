{
  "name": "Microservice_nodejs",
  "version": "1.0.0",
  "description": "Dockerized Node.js microservices",
  "author": "Shashwat Gulyani <shashwat.gulyani@gmail.com>",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon",
    "test": "nyc --reporter=html --reporter=text mocha --recursive --exit",
    "lint": "/node_modules/.bin/eslint .",
    "lint:fix": "/node_modules/.bin/eslint . --fix",
    "docker:image": "docker build -t hackerbay_ms .",
    "docker:container": "docker run -it -p 8080:8080 -d hackerbay_ms"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.16.1",
    "fast-json-patch": "^2.1.0",
    "jsonwebtoken": "^8.5.1",
    "request": "^2.88.0",
    "sharp": "^0.22.1",
    "winston": "2.4.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "jsdoc": "^3.6.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1"
  }
}
